<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent00">

    <RelativeLayout
        android:id="@+id/llSizePicker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@color/greyCBC9CC"
        android:orientation="horizontal"
        android:weightSum="19">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <com.common.widget.wheel.WheelView
                android:id="@+id/wvLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1" />
            <com.common.widget.wheel.WheelView
                android:id="@+id/wvMiddle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp" />
    </RelativeLayout>
    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/llSizePicker"
        android:background="@color/greyACACAC" />

    <RelativeLayout
        android:id="@+id/rlOperate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@id/vDivider"
        android:background="@color/greyCBC9CC">

        <TextView
            android:id="@+id/ctvSet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/global_picker_three_done"
            android:textColor="@android:color/black"
            style="@style/font_family_roboto_medium" />

        <TextView
            android:id="@+id/ctvCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/global_picker_three_cancel"
            android:textColor="@android:color/black"
            style="@style/font_family_roboto_medium" />
    </RelativeLayout>

</RelativeLayout>