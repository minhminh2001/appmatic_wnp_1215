<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- toolbar style -->
    <style name="ToolBarStyle" parent="ToolBarStyle.Base">
        <item name="titleTextAppearance">@style/HeaderBarTitleTextStyle</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- 中间Title-->
    <style name="HeaderBarTitleTextStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/header_bar_title_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/header_bar_image_touch_width_and_height
        </item>
        <item name="android:textColor">@color/whiteFFFFFF</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">@dimen/header_bar_title_padding_bottom</item>
        <item name="android:textSize">@dimen/header_bar_title_text_size</item>
    </style>
</resources>
