<resources>

    <!-- Base application theme.  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
         <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="main_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppThemeBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black000000</item>
    </style>
    <style name="startStyle" parent="AppThemeBlack"></style>
    <style name="BlackgroundBalckTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/black000000</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="BackgroundWhiteTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="checkout_textview_size_hint" parent="font_family_robot_regular">
        <item name="android:textColor">@color/label_saved</item>
        <item name="android:textSize">@dimen/labelTextFontSize</item>
    </style>
    <style name="checkout_textview_size_content" parent="font_family_robot_regular">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/editColor</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">@dimen/editTextFontSize</item>
    </style>
    <style name="curation_time_desc">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_3fabac</item>
    </style>
    <style name="tv_curation_time_style">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="rl_curation_time_num_style">
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="rl_curation_time_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- spinner -->
    <style name="spinner_style">
        <item name="android:background">@drawable/background_selector</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
    <!--checkout module: popupwindow animation-->
    <style name="pop_checkout_payment">
        <item name="android:windowEnterAnimation">@anim/pop_checkout_to_bottom</item>
        <item name="android:windowExitAnimation">@anim/pop_checkout_dropdown_bottom</item>
    </style>
    <!-- self define loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/exit_app_radius</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="progress_dialog_shoppingcart" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:background">@color/transparent00</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 上传图片-->
    <style name="popupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_photo_in</item>
        <item name="android:windowExitAnimation">@anim/anim_photo_out</item>
    </style>

    <style name="my_address_add_edit">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="my_address_add_layout">
        <item name="android:layout_height">65dp</item>

    </style>

    <style name="productdetail_largepicture" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/productdetail_largepicture_style</item>
    </style>

    <style name="productdetail_largepicture_style">
        <item name="android:activityOpenEnterAnimation">@anim/anim_productdetail_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_productdetail_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_productdetail_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_productdetail_exit</item>
    </style>

    <style name="dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@color/transparent00</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--模糊-->
    </style>

    <style name="dialog2" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@color/transparent00</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--模糊-->
    </style>


