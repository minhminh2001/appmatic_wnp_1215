<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagianto="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_category_tree_divi"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="15dp"
        android:layout_height="69dp">
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_category_tree_group"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:layout_marginTop="-1.5dp"
            android:layout_marginBottom="-1.5dp"/>

        <RelativeLayout
            android:id="@+id/rl_category_tree_group_tag"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:layout_height="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/black"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_category_tree_line"
                android:layout_width="1.5dp"
                android:background="@color/black"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <com.whitelabel.app.widget.CustomTextView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/rl_category_tree_group_tag"
            imagianto:textFont="LatoRegular"
            android:textColor="@color/black"
            android:id="@+id/tv_category_tree_group_name"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>