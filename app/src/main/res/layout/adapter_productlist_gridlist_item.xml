<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imaginato="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="8.9dp">

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyE4E4E4" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="wrap_content"
            android:layout_height="162.55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="0dp"
            android:scaleType="fitCenter"

            />

        <RelativeLayout
            android:id="@+id/rl_product_list_out_of_stock"
            android:layout_width="fill_parent"
            android:layout_height="162.55dp"
            android:layout_alignTop="@id/ivProductImage"
            android:layout_alignBottom="@id/ivProductImage"
            android:visibility="gone"
            android:background="@color/sswhite">
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@color/black50000000"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <com.whitelabel.app.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteFFFFFF"
                    android:text="@string/out_of_stock2"
                    android:layout_centerInParent="true"
                    style="@style/font_family_robot_regular"
                    android:textSize="11sp"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:id="@+id/rl_productlist_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_productlist_wish_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:src="@mipmap/wishlist_purple_normal_v2"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/iv_productlist_wish_icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:src="@mipmap/wishlist_purple_normal_v2"
                android:visibility="visible" />
        </RelativeLayout>

        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/ctvProductBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProductImage"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="9dp"
            android:singleLine="true"
            android:textColor="@color/black000000"
            android:textSize="11sp"
            style="@style/font_family_robot_regular" />

        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/ctvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctvProductBrand"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:maxLines="2"
            android:textColor="@color/black000000"
            android:textSize="13.5sp"
            style="@style/font_family_robot_regular"/>

        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/ctvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctvProductName"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="11sp"
            style="@style/font_family_robot_regular"/>

        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/ctvProductFinalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctvProductPrice"
            android:ellipsize="end"
            android:gravity="left"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13.5sp"
            style="@style/font_family_roboto_medium"/>
        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/ctv_product_merchant"
            android:layout_below="@+id/ctvProductFinalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black000000"
            android:textSize="11sp"
            android:paddingBottom="5dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:singleLine="true"
            style="@style/font_family_robot_regular"
            android:text=" "
            />

    </RelativeLayout>
</LinearLayout>