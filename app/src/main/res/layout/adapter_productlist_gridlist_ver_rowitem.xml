<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/llLeftProduct"
        layout="@layout/adapter_productlist_gridlist_ver_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8.9dp"
        android:layout_marginLeft="8.9dp" />

    <View
        android:id="@+id/vProductListDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/v2_line" />

    <include
        android:id="@+id/llRightProduct"
        layout="@layout/adapter_productlist_gridlist_ver_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8.9dp"
        android:layout_marginLeft="8.9dp"
        />
    <View
        android:id="@+id/vHorDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/v2_line" />
</LinearLayout>