<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/tv_type"
        android:text="tttttttttttttttttttttttttt"
        android:layout_toLeftOf="@+id/ll_credit"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        style="@style/font_family_roboto_medium"
        android:layout_marginRight="15dp"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </com.whitelabel.app.widget.CustomTextView>


    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/tv_date"
        android:layout_below="@+id/tv_type"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:text="04/06/2016 11:10:20"
        style="@style/font_family_robot_regular"
        android:textColor="@color/greyC888888"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </com.whitelabel.app.widget.CustomTextView>


    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/tv_name"
        android:layout_below="@+id/tv_date"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        style="@style/font_family_robot_regular"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </com.whitelabel.app.widget.CustomTextView>


    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/tv_price"
        android:textSize="18sp"
        style="@style/font_family_roboto_medium"
        android:layout_alignParentRight="true"
        android:text="9,950"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </com.whitelabel.app.widget.CustomTextView>

    <LinearLayout
        android:id="@+id/ll_credit"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_price"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <com.whitelabel.app.widget.CustomTextView

            android:textSize="12sp"
            style="@style/font_family_robot_regular"
            android:text="Balance: "
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </com.whitelabel.app.widget.CustomTextView>
    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/tv_credit"
        android:textSize="12sp"
        style="@style/font_family_robot_regular"
        android:text="23,750"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </com.whitelabel.app.widget.CustomTextView>

    </LinearLayout>
</RelativeLayout>