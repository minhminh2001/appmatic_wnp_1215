<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar"
        android:layout_alignParentTop="true"
        android:background="@color/black000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusbar_height"/>

    <RelativeLayout
        android:id="@+id/rl_checkout_top_bar"
        android:layout_width="match_parent"
        android:background="@color/black000000"
        android:layout_height="wrap_content">
        <include layout="@layout/common_toolbar"/>

    </RelativeLayout>
    <WebView
     android:layout_below="@+id/rl_checkout_top_bar"
    android:id="@+id/wv_checkout_payment_redirect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>
