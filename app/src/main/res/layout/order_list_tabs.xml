<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greyF3F3F3"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/order_list_tabs_rad"
        android:id="@+id/order_layout_all">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/order_list_all_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@mipmap/success2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/order_list_all"
            android:textSize="12sp"
            android:text="All"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black000000" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.4"></LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/order_list_tabs_rad"
        android:id="@+id/order_layout_active">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/order_list_active_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@mipmap/success2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/order_list_active"
            android:layout_below="@+id/order_list_active_icon"
            android:textSize="12sp"
            android:text="Active"
            android:textColor="@color/black000000"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:id="@+id/order_list_active_tip"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/shape_oval_homepage_shoppingcart_num"
            android:textSize="12sp"
            android:textColor="@color/white" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.4"></LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/order_list_tabs_rad"
        android:id="@+id/order_layout_past">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/order_list_past_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@mipmap/success2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/order_list_past"
            android:textSize="12sp"
            android:text="Past"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black000000" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"></LinearLayout>
</LinearLayout>