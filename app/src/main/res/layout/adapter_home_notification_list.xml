<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_helpcenterlist_and_notificationlist"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/notification_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@mipmap/arrow_right"/>

    <ImageView
        android:id="@+id/iv_notification_dot"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/shape_oval_homepage_shoppingcart_num"/>

    <LinearLayout
        android:id="@+id/ll_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/notification_arrow"
        android:layout_toRightOf="@+id/iv_notification_dot"
        android:orientation="vertical">

        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/tv_notification_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="2"
            android:text="@string/campaign_title_big1"
            android:textColor="@color/black000000"
            android:textSize="17sp"
            style="@style/font_family_roboto_medium"/>

        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/tv_notification_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_notification_title"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray999999"
            android:textSize="13sp"
            style="@style/font_family_robot_regular"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_notification_title"
        android:background="@color/greyEEEEEE"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


</RelativeLayout>