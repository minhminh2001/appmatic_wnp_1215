                android:id="@+id/ivHeaderBarWishlist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/wishlist_purple_normal"
                android:visibility="visible"/>
        </RelativeLayout>


        <!--Add to cart-->
        <!--backgroud 和 height 都在activity里改-->
        <LinearLayout
            android:id="@+id/ll_addtocart"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_touch_height"
            android:layout_weight="1"
            android:background="@color/purple"
            android:enabled="false"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal">
            <!-- 收藏-->
            <RelativeLayout
                android:id="@+id/rl_addtowishlist_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:visibility="gone">
