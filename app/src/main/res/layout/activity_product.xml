                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteFFFFFF">
    <com.whitelabel.app.widget.CustomCoordinatorLayout
        android:id="@+id/cl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways">
        <com.whitelabel.app.widget.CustomNestedScrollView
            android:id="@+id/myScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:fadingEdge="none"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="vertical"
            imaginato:parallax_factor="2">
            <RelativeLayout
                android:id="@+id/scrollView_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="500dp">
                <RelativeLayout
                    android:id="@+id/rl_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/product_details_viewpager_height">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/detail_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_details_viewpager_height"/>
                    <!-- viewpager的覆盖层 用于Transition-->
                    <ImageView
                        android:id="@+id/ivProductImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/detail_viewpager"
                        android:layout_alignLeft="@+id/detail_viewpager"
                        android:layout_alignRight="@+id/detail_viewpager"
                        android:layout_alignTop="@+id/detail_viewpager"
                        android:scaleType="fitXY"/>
                    <com.whitelabel.app.widget.CustomTextView
                        android:id="@+id/product_unavailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:autoText="false"
                        android:background="@color/transparentgray9A"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:text="UNAVAILABLE"
                        android:textColor="@color/whiteffffff"
                        android:textSize="18dp"
                        android:visibility="gone"
                        imaginato:textFont="LatoBold"/>
                    <TextView
                        android:id="@+id/product_trans"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_details_viewpager_height"
                        android:background="@color/tranwhite"
                        android:visibility="gone">
                    </TextView>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/product_details_viewpager_dot_margin_top"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible"/>

                <RelativeLayout
                    android:id="@+id/detail_title_RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_viewpager"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <View
                        android:id="@+id/ctvProductTitleLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />

                    <com.whitelabel.app.widget.CustomTextView
                        android:id="@+id/ctvProductBrand"
                        style="@style/font_family_robot_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ctvProductTitleLine"
                        android:textColor="@color/black000000"
                        android:textSize="12sp" />

                    <com.whitelabel.app.widget.CustomTextView
                        android:id="@+id/ctvProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ctvProductBrand"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        imaginato:textFont="LatoBold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/final_relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_title_RelativeLayout"
                    android:background="@color/white"
                    android:visibility="visible">
                    <include
                        android:id="@+id/view"
                        layout="@layout/activity_prodextinclude_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.whitelabel.app.widget.ProductChildListView
                        android:id="@+id/pc_group_config"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.whitelabel.app.widget.ProductChildListView>
                </RelativeLayout>
