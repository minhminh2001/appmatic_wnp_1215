                    android:id="@+id/ivHeaderBarWishlist11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/wishlist_white_normal"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/ivHeaderBarWishlist22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/wishlist_white_normal"
                    android:visibility="visible"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <com.whitelabel.app.widget.CustomTextView
                    android:id="@+id/ctvAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/product_detail_addtocart"
                    android:textColor="@color/whiteffffff"
                    android:textSize="@dimen/button_font_size"
                    imaginato:textFont="LatoBold"/>
            </LinearLayout>
