<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="right"
    android:paddingRight="10dp"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_img"
        android:src="@drawable/action_cart"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="28dp" />

    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/ctv_home_shoppingcart_num"
        style="@style/font_family_robot_regular"
        android:layout_marginLeft="13dp"
        android:layout_width="@dimen/shoppingcart_icon_num_wh"
        android:layout_height="@dimen/shoppingcart_icon_num_wh"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:text=""
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/shape_oval_homepage_shoppingcart_num"
        android:textColor="@color/whiteFFFFFF"
        android:textSize="10sp"/>
</RelativeLayout>