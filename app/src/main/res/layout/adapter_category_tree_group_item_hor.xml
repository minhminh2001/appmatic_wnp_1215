<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagianto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
<LinearLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/ripple_with_no_mash"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_category_tree_divi"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1"
        android:id="@+id/rl_title"
        android:layout_width="0dp"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content">
        <!--<ImageView-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:id="@+id/iv_category_tree_group"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:layout_width="150dp"-->
        <!--android:visibility="gone"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginTop="-1.5dp"-->
        <!--android:layout_marginBottom="-1.5dp"/>-->
        <RelativeLayout
            android:id="@+id/rl_category_tree_group_tag"
            android:layout_centerVertical="true"
            android:layout_width="10dp"
            android:visibility="gone"
            android:layout_height="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/black"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_category_tree_line"
                android:layout_width="1.5dp"
                android:background="@color/black"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <com.whitelabel.app.widget.CustomTextView
            android:layout_marginLeft="8dp"
            android:text="Text"
            android:layout_toRightOf="@+id/rl_category_tree_group_tag"
            imagianto:textFont="LatoRegular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/tv_category_tree_group_name"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_category_tree_group"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:background="@color/greyD0D0D0"
        android:layout_width="0dp"
        android:layout_height="100dp" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_light"
        />
   </LinearLayout>