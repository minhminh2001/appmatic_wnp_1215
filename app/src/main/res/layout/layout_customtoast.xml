<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_productdetail_addtocart_bg"
    android:gravity="center"
    android:orientation="vertical">
    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/vTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/black000000"
        android:textSize="15sp"
        style="@style/font_family_robot_regular" />
    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/vTextViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:textColor="@color/black000000"
        android:textSize="13sp"
        style="@style/font_family_robot_regular" />
</LinearLayout>