<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:background="@drawable/dialog_message_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.whitelabel.app.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/messagedialog_message"
            android:textColor="@color/black222222"
            android:textSize="18sp"
            style="@style/font_family_roboto_medium" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:fadingEdge="none"
            android:scrollbars="none">

            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/ctvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black333333"
                android:textSize="14sp"
                style="@style/font_family_robot_regular" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.whitelabel.app.widget.CustomButton
            android:id="@+id/cbtOK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/messagedialog_ok"
            android:textColor="@color/black222222"
            android:textSize="18sp"
            style="@style/font_family_roboto_medium" />
    </LinearLayout>

</LinearLayout>