<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitelabel.app.fragment.HomeSelectCrditCardFragment">
    <RelativeLayout
        android:id="@+id/rlHeaderBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_bar_height"
        android:background="@color/black000000"
        android:clickable="true">
        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/ctvHeaderBarTitle"
            style="@style/HeaderBarTitleTextStyle"
            android:text="@string/home_notification_title" />
        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/tv_notification_num"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ctvHeaderBarTitle"
            android:background="@mipmap/bg_notification_count"
            android:gravity="top|center_horizontal"
            android:paddingTop="0dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rlHeaderBarMenu"
            style="@style/HeaderBarLeftImageTouchTargetStyle">

            <ImageView
                style="@style/HeaderBarLeftImageStyle"
                android:id="@+id/ivHeaderBarMenu"
                android:src="@drawable/action_menu"/>
        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>
