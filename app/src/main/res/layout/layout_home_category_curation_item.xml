<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.whitelabel.app.widget.ZoomInImageView
        android:id="@+id/ivCuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
       />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner1"
        android:visibility="gone">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/banner1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner2"
        android:visibility="gone">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/banner2"
            />
        <com.whitelabel.app.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/whiteffffff"
            style="@style/font_family_robot_regular"
            android:textSize="30sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/banner2_text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner3"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/banner3"
            />
        <com.whitelabel.app.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/font_family_robot_regular"
            android:textColor="@color/whiteffffff"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/banner3_text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner4"
        android:visibility="gone"
       >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/banner4"
            />
        <com.whitelabel.app.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteffffff"
            style="@style/font_family_robot_regular"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="23dp"
            android:id="@+id/banner4_text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner5"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/banner5"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner6"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/banner6"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner7"
        android:visibility="gone">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/banner7"
            />
        <com.whitelabel.app.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/whiteffffff"
            style="@style/font_family_robot_regular"
            android:textSize="17sp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/banner7_text"
            />
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:id="@+id/banner8"
    android:visibility="gone">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/banner8"
        />
    <com.whitelabel.app.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/whiteffffff"
        style="@style/font_family_robot_regular"
        android:textSize="17sp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/banner8_text"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/banner9"
        android:visibility="gone">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/banner9"
            />
        <com.whitelabel.app.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="@color/whiteffffff"
            style="@style/font_family_robot_regular"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/banner9_text"
            />
    </RelativeLayout>
    <View
        android:id="@+id/empty"
        android:layout_below="@+id/ivCuration"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/transparent00" />



    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/tv_desc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="13sp"
        android:layout_above="@+id/empty"
        style="@style/font_family_robot_regular"
        android:layout_alignParentRight="true"
        android:layout_width="305dp"
        android:layout_height="36dp"
        android:textColor="@color/black"
        android:background="@color/whiteEAFFFFFF"
        android:gravity="center_vertical"
        android:maxLength="35" />

    <ImageView
        android:id="@+id/iv_discount"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llGemPicks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCuration"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/greyE1E1E1" />

        <com.whitelabel.app.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="@string/home_home_category_gempicks"
            android:textColor="@color/black000000"
            android:textSize="14sp"
            style="@style/font_family_robot_regular"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/greyE1E1E1" />
    </LinearLayout>


</RelativeLayout>
