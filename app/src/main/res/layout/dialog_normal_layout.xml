<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="25.0dip"
    android:background="@color/black80000000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/exit_app_radius"
        android:orientation="vertical" >

        <com.whitelabel.app.widget.CustomTextView
            android:id="@+id/title"
            style="@style/text_18_ffffff"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@color/facebook"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="20dp"
            android:gravity="center" >


            <com.whitelabel.app.widget.CustomTextView
                style="@style/font_family_robot_regular"
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/are_you_sure_you_want"
                android:textSize="16sp"
                android:textColor="@color/black999999"
                android:textIsSelectable="false" />
        </LinearLayout>


        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">



                <com.whitelabel.app.widget.CustomTextView
                    android:id="@+id/positiveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes_upp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="19dp"
                    android:paddingLeft="19dp"
                    android:textColor="@color/purple92018d"
                    style="@style/font_family_roboto_medium"
                    android:textSize="14sp" />

            <com.whitelabel.app.widget.CustomTextView
                style="@style/font_family_roboto_medium"
                android:id="@+id/negativeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="19dp"
                android:paddingLeft="19dp"
                android:layout_marginLeft="20dp"
                android:text="@string/no_upp"
                android:textColor="@color/purple92018d"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>