<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagianto="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_category_tree_divi"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="5dp" />
<RelativeLayout
    android:paddingTop="12dp"
    android:id="@+id/rl_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_category_tree_group_tag"
        android:layout_centerVertical="true"
        android:layout_width="10dp"
        android:visibility="gone"
        android:layout_height="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/black"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_category_tree_line"
            android:layout_width="1.5dp"
            android:background="@color/black"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <com.whitelabel.app.widget.CustomTextView
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/rl_category_tree_group_tag"
        imagianto:textFont="LatoRegular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/tv_category_tree_group_name"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_category_tree_group_name"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/device_line" />
</RelativeLayout>
  <ImageView
      android:id="@+id/iv_category_tree_group"
      android:scaleType="fitXY"
      android:layout_width="match_parent"
      android:layout_height="150dp" />
</LinearLayout>