<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/ctvDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black000000"
        android:textSize="16sp"
        style="@style/font_family_roboto_medium" />
    <LinearLayout
        android:id="@+id/ll_productdetail_webview"
        android:layout_below="@+id/ctvDetailTitle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

    <com.whitelabel.app.widget.CustomTextView
        android:id="@+id/ctvDetailContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_productdetail_webview"
        android:layout_marginTop="5dp"
        android:textColor="@color/black000000"
        android:textSize="13.5sp"
        style="@style/font_family_robot_regular"
        />
</RelativeLayout>