<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imaginato="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/grayf0f0f0"

    android:layout_height="wrap_content">
    <com.whitelabel.app.widget.CustomTextView
        style="@style/font_family_robot_regular"
        android:id="@+id/tv_shoppingcart_cell_left_placeholder"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/grayf0f0f0"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/mparent"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shoppingcart_cell_left_top_padding"
        android:layout_toRightOf="@+id/tv_shoppingcart_cell_left_placeholder"
        android:background="@color/whiteFFFFFF">
        <RelativeLayout
            android:id="@+id/iv_shopping_cart_cell1"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_shopping_cart_cell"
                android:layout_width="151dp"
                android:layout_height="151dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter" />


            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/unavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/grey444444"
                android:text="UNAVAILABLE"
                android:textColor="@color/whiteffffff"
                android:visibility="gone"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                 />



            <TextView
                android:layout_width="151dp"
                android:layout_height="151dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/rl_wish_item_context"
                android:layout_alignBottom="@+id/rl_wish_item_context"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tv_shopping_trans"
                android:background="@color/tranwhite"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/iv_shopping_cart_cell1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/tv_bland"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="brand"
                android:textColor="@color/black"
                android:textSize="12dp"
                style="@style/font_family_robot_regular" />

            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/tv_sc_cell_productname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Apple Watchdfsdfasdfasdfasdfasdf"
                android:textColor="@color/black000000"
                android:textSize="14dp"
                style="@style/font_family_robot_regular"
                android:lines="2" />


            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/tv_sc_cell_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:visibility="gone"
                style="@style/font_family_robot_regular" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.whitelabel.app.widget.CustomTextView
                    android:id="@+id/tv_sc_cell_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="color|"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    style="@style/font_family_robot_regular" />
                <com.whitelabel.app.widget.CustomTextView
                    android:id="@+id/tv_sc_cell_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="size"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    style="@style/font_family_robot_regular" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_shoppingcart_cell_outofstock"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.whitelabel.app.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/grayf8f8f8"
                    android:gravity="center"
                    android:text="SOLD OUT"
                    android:textColor="@color/black000000"
                    android:textSize="11sp"
                    style="@style/font_family_robot_regular"
                    android:visibility="visible" />

                <com.whitelabel.app.widget.CustomTextView
                    android:id="@+id/tv_shoppingcart_cell_outofstock"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="RM 2539.90"
                    android:textColor="@color/gray888888"
                    android:textSize="11sp"
                    android:visibility="gone"
                    style="@style/font_family_robot_regular" />
            </LinearLayout>

            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/tv_shoppingcart_cell_instock"
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/black000000"
                android:gravity="center"
                android:text="IN STOCK"
                android:textColor="@color/whiteFFFFFF"
                android:textSize="11dp"
                android:visibility="visible"
                style="@style/font_family_robot_regular" />

            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/tv_sc_cell_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="RM 00.00"
                android:textColor="@color/black000000"
                android:textSize="12dp"

                style="@style/font_family_robot_regular" />


            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/tv_sc_cell_finalprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="RM 00.00"
                android:textColor="@color/black000000"
                android:textSize="14dp"
                style="@style/font_family_roboto_medium" />
            <com.whitelabel.app.widget.CustomTextView
                android:id="@+id/tv_check_mername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray888888"
                android:text=""
                android:singleLine="true"
                android:gravity="center"
                android:textSize="12dp"
                style="@style/font_family_robot_regular"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/linearlayout_gray_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_shoppingcart_count_sub"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:padding="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/draw_shoppingcart_minus" />


                    <com.whitelabel.app.widget.CustomTextView
                        style="@style/font_family_robot_regular"
                        android:id="@+id/tv_shoppingcart_cell_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="1" />

                    <ImageView
                        android:id="@+id/tv_shoppingcart_count_plus"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/draw_shoppingcart_plus" />
                </LinearLayout>
            </LinearLayout>
        <ImageView
            android:id="@+id/iv_shopping_cart_cell_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:src="@drawable/draw_shoppingcart_close" />
    </RelativeLayout>

    <com.whitelabel.app.widget.CustomTextView
        android:layout_toRightOf="@+id/mparent"
        style="@style/font_family_robot_regular"
        android:id="@+id/tv_right"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/grayf0f0f0"
 />

</RelativeLayout>


